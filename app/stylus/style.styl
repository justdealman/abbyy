f-opensans = 'Open Sans', sans-serif

// Default

html
	height 100%
	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before
	*:after
		vertical-align top
		box-sizing border-box

body
	overflow-x hidden
	width 100%
	height 100%
	color colorBlack
	font-size 12px
	line-height 16px
	font-family f-opensans
	padding 0
	margin 0
	background #ffffff
	-webkit-tap-highlight-color transparent

p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse

	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color colorBlack
	text-decoration none

	&:hover
		text-decoration none

form
	margin 0

ul
	margin 0 0 10px 16px
	padding 0

	li
		padding 0
		list-style none

ol
	margin 0 0 10px 18px
	padding 0

	li
		padding 0 0 0 16px

input
select
textarea
	font-size 12px
	font-family f-opensans
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family f-opensans
	margin 0
	border 0
	box-sizing border-box

	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
